.log-list {
  display: flex;
  flex-direction: column;
  top: 0;
  position: relative;
}

.avator {
  width: 16pt;
  height: 16pt;
  align-content: center;
  display: inline-block;
  border-radius: 50%;
  margin-left: 15pt;
}

.txt-time {
  position: absolute;
  right: 0;
  font-size: 11pt;
  margin-right: 15pt;
  color: #858585;
}

.txt-name {
  font-size: 13pt;
  margin-left: 15rpx;
  color: #004e66;
}

.txt-content {
  font-size: 13pt;
  color: #383a3f;
  margin-left: 15pt;
  margin-right: 15pt;
  display: inline-block;
  margin-top: 10pt;
}

.line {
  width: 100%;
  height: 0.5pt;
  margin-top: 10rpx;
  background: #eee;
}

.info-txt {
  display: inline-block;
  left: 30rpx;
  align-content: center;
}

.info {
  display: inline-flex;
  margin-top: 20rpx;
}
